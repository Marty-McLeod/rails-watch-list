<div class="container">

    <div class="col-6 mx-auto">
        <div class="bg-white rounded-3 p-3 shadow mt-3">
            <h1 class="mt-3">Create a new list</h1>
            <%= simple_form_for @list do |l| %>
                <%= l.input :name, placeholder: 'Adventure' %>
                <%= l.submit class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>

</div>