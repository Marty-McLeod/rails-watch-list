<div class="banner">
            <h1 class="text-white fw-bold">Save movies to a list</h1>
</div>
<div class="container py-3">
    <div class="d-flex justify-content-between my-3 align-items-center">
        <h2 class="ms-0 fw-bold">My lists</h2>
        <%= link_to "Create a movie list", new_list_path, class: "btn btn-success text-white rounded-3" %>
    </div>

    <div class="row gap-3 gx-0">
        <% if @lists %>
            <% @lists.each do |l| %>
                    <div class="div-list col-md-4 col-sm-10" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= asset_path('list-cover-1.jpg')%>);
                        background-position: center;">
                        <a href=<%= list_path(l) %> ><h3><%= l.name %></h3></a>
                    </div>
            <% end %>
        <% else %>
            <h3 class="text-warning">(No lists found)</h3>
        <% end %>
    </div>

</div>